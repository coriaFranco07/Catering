<%- include ('../partials/head.ejs') %>
<div class=" container mt-4 col-12 d-flex">
  <% if (typeof validaciones != 'undefined'){ %>
    <% validaciones.forEach((valid)=>{%>

      <strong class="btn btn-outline-danger btn-sm"><%=valid%></strong>

       
    <%})%>

  <% } %>
</div>
      <div class="container mt-4">
      <div class="card border-secondary">
        <div class="card-header">Nuevo Registro</div>
            <div class="card-body">
                <form action="/ests/movests/ctns/addmovest" method="post">
                 
                 
                  <div class="row mt-3">
                    <div class="col-6">
                      <span class="input-group-text d-sm-block bg-primary text-white">CONTRATACION</span>
                      <select id="contratacion" name="contratacion" class="form-select " tabindex="3" >
                        <% contrataciones.forEach((ctn) => { %>
                          <option class="text-sm-center" <%= valores.contratacion==ctn.id_contratacion ? 'selected' : '' %> value="<%=ctn.id_contratacion %>"><%=ctn.dsc_contratacion %></option>
                         <% }) %>
                      </select>
                    </div>
                    <div class="col-6">
                      <span class="input-group-text d-sm-block bg-primary text-white">ESTADO</span>
                      <select id="estado" name="estado" class="form-select " tabindex="4" >
                        <% estados.forEach((est) => { %>
                          <option class="text-sm-center" <%= valores.estado==est.id_est_mov ? 'selected' : '' %> value="<%=est.id_est_mov %>"><%=est.dsc_est_mov %></option>
                         <% }) %>
                      </select>
                    </div>
                    
                  
                 
                </div>
                    
                    
                    <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/ests/movests/ctns" class="btn btn-secondary">Cancelar</a>

                </form>
            </div>
        </div>
      </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(alert) {%>
    
      <script>
        
        Swal.fire({
          title: '<%= alertTitle  %>',
          text: '<%= AlertMessage  %>',
          icon: '<%= alertIcon  %>',
          showConfirmButton: '<%= showConfirmButton  %>',
          timer: '<%= timer  %>'
        }).then(()=>{
          //window.location= '<%= ruta %>'
        })
    
    </script>
      
    
    
    <% } %>  

  
  </body>
</html>