<%- include ('../partials/head.ejs') %>
      <% if (username) { %>
        <div class=" container mt-4 col-12 d-flex">
          <% if (typeof validaciones != 'undefined'){ %>
            <% validaciones.forEach((valid)=>{%>
  
              <strong class="btn btn-outline-danger btn-sm"><%=valid%></strong>
  
               
            <%})%>
  
          <% } %>
        </div>
        <div class="container mt-4 col-xxl-12 d-flex">
      <div class="card border-secondary">
        <div class="card-header">Editar Registro</div>
            <div class="card-body">
                <form action="updpass" method="POST">
                    <input id="id_user" name="id_user" value="<%= id%>" hidden>
                    <input id="username" name="username" value="<%= username%>" hidden>
                    
                    
                  <div class="row mt-3">
                    <div class="col-12">
                        <span class="input-group-text d-sm-block bg-primary text-white">Nombre Usuario</span>
                        <input type="text" class="form-control text-center" id="usuario" name="usuario" tabindex="0" value="<%= username %>" disabled>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">      
                        <span class="input-group-text d-sm-block bg-primary text-white">Contraseña</span>
                        <input type="password" class="form-control text-center" id="password" name="password" tabindex="1" >
                    </div>
                </div>
                <div class="row mt-3">
                  <div class="col-12">      
                      <span class="input-group-text d-sm-block bg-primary text-white">Confirme Contraseña</span>
                      <input type="password" class="form-control text-center" id="passwordconf" name="passwordconf" tabindex="2" >
                  </div>
              </div>


                    <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/users" class="btn btn-secondary">Cancelar</a>

                </form>
            </div>
        </div>
      </div>
<% } %>
 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(alert) {%>
    
      <script>
        
        Swal.fire({
          title: '<%= alertTitle  %>',
          text: '<%= AlertMessage  %>',
          icon: '<%= alertIcon  %>',
          showConfirmButton: '<%= showConfirmButton  %>',
          timer: '<%= timer  %>'
        })
        /* .then(()=>{
          window.location= '<%= ruta %>'
          window.location= '/exptes/create'
        }) */
    
    </script>
      
    
    
    <% } %>  
  
  </body>
</html>