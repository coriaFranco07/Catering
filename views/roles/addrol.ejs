<%- include ('../partials/head.ejs') %>
      
      
      <div class="container mt-4 col-12 d-flex">
        
      <div class="card border-secondary">
        <div class="card-header bg-primary text-white text-center">NUEVO REGISTRO</div>
            <div class="card-body">
              
                <form action="/users/role/add" method="post">
 
                  <div class="row mt-3">

                    <div class="col-12">
                      <input type="hidden"  id="id_user" name="id_user"  value="<%= id_user %>">
                      <span class="input-group-text d-sm-block bg-primary text-white">ROLES</span>
                      <select id="roles" name="roles" class="form-select " tabindex="3" >
                        <% roles.forEach((rol) => { %>
                          <option class="text-sm-center" value="<%= rol.id_rol %>"><%=rol.name_rol %></option>
                         <% }) %>
                      </select>
                    </div>
                    
                 
                </div>
                  
                 <div class="row-cols-sm-8 mt-3">                   
                    <button type="submit" class="btn btn-primary" tabindex="4">Guardar</button>
                    <a href="../<%= id_user %>" class="btn btn-secondary">Cancelar</a>
                  </div>
                </form>
            </div>
      </div>
      </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(alert) {%>
    
      <script>
        
        Swal.fire({
          title: '<%= alertTitle  %>',
          text: '<%= AlertMessage  %>',
          icon: '<%= alertIcon  %>',
          showConfirmButton: '<%= showConfirmButton  %>',
          timer: '<%= timer  %>'
        })
        /* .then(()=>{
          window.location= '<%= ruta %>'
          window.location= '/exptes/create'
        }) */
    
    </script>
      
    
    
    <% } %>  

  
  </body>
</html>