<%- include ('../partials/head.ejs') %>
    <div class=" container mt-4 col-12 d-flex">
        <% if (typeof validaciones != 'undefined'){ %>
          <% validaciones.forEach((valid)=>{%>

            <strong class="btn btn-outline-danger btn-sm"><%=valid%></strong>

             
          <%})%>

        <% } %>
      </div>
      
      <div class="container mt-4 col-12 d-flex">
       
      <div class="card border-secondary">
        <div class="card-header bg-primary text-white text-center">NUEVO REGISTRO</div>
            <div class="card-body">
                <form action="/volante/add" method="post">
                  <div class="row mt-3">
                    <div class="col-4">
                        <input type="hidden" id="id_volane" name="id_volante" value="<%= id_volante %>">
                        <span class="input-group-text d-sm-block bg-primary text-white">LINEA</span>
                        <input type="number" class="form-control" id="nro_linea" name="nro_linea" tabindex="" value="<% if(typeof valores != 'undefined') { %><%= valores.nro_linea %><%}%>">
                    </div>  
                    <div class="col-8">  
                        <span class="input-group-text d-sm-block bg-primary text-white">REQUERIMIENTO</span>
                        <select id="elemento" name="elemento" class="form-select " tabindex="3" >
                          <% elem.forEach((elm) => { %>
                            <option class="text-sm-center" <%= valores.elemento==elm.tipo_elementos.id_tipo_elemento ? 'selected' : '' %> value="<%=elm.tipo_elementos.id_tipo_elemento %>"><%=elm.tipo_elementos.dsc_tipo_elemento %></option>
                           <% }) %>
                        </select>
                          

                      </div>
                  </div>

                  <div class="row mt-3">
                    <div class="col-4">
                        <span class="input-group-text d-sm-block bg-primary text-white">ORD. COMPRA</span>
                        <input type="text" class="form-control" id="ord_compra" name="ord_compra" tabindex="0" value="<% if(typeof valores != 'undefined') { %><%= valores.ord_compra %><%}%>">
                    </div>  
                    <div class="col-8">  
                        <span class="input-group-text d-sm-block bg-primary text-white">PROVEEDOR</span>
                        <select id="proveedor" name="proveedor" class="form-select " tabindex="3" >
                          <% prvs.forEach((prv) => { %>
                            <option class="text-sm-center" <%= valores.proveedor==prv.id_proveedor ? 'selected' : '' %> value="<%=prv.id_proveedor %>"><%=prv.dsc_proveedor %></option>
                           <% }) %>
                        </select>
                          

                      </div>
                  </div>


                  
                 <div class="row-cols-sm-8 mt-3">                   
                    <button type="submit" class="btn btn-primary" tabindex="6">Guardar</button>
                    <a href="/volante/vlt/<%= id_volante %>" class="btn btn-secondary">Cancelar</a>
                  </div>
                </form>
            </div>
        </div>
      </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(alert) {%>
    
      <script>
        
        Swal.fire({
          title: '<%= alertTitle  %>',
          text: '<%= AlertMessage  %>',
          icon: '<%= alertIcon  %>',
          showConfirmButton: '<%= showConfirmButton  %>',
          timer: '<%= timer  %>'
        })
        /* .then(()=>{
          window.location= '<%= ruta %>'
          window.location= '/exptes/create'
        }) */
    
    </script>
      
    
    
    <% } %>  

  
  </body>
</html>