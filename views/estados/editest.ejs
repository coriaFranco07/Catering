      <div class="container mt-4">
      <div class="card border-secondary">
        <div class="card-header">Editar Registro</div>
            <div class="card-body">
                <form action="../update" method="POST">
                    <input id="id_estado" name="id_estado" value="<%= estado.id_estado%>" hidden>
                    
                    <div class="mb-3">
                      <label for="dsc_estado" class="form-label">Estado</label>
                      <input type="text" class="form-control" id="dsc_estado" name="dsc_estado" value="<%= estado.dsc_estado %>" tabindex="1">
                  </div>
                 
               
                    <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/ests" class="btn btn-secondary">Cancelar</a>

                </form>
            </div>
        </div>
      </div>
<% } %>
